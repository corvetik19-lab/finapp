}

.upcomingName {
  font-size: 15px;
  font-weight: 600;
  color: var(--primary-dark);
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.upcomingMeta {
  display: flex;
  align-items: center;
  gap: 6px;
  font-size: 13px;
  color: var(--text-secondary);
  min-width: 0;
  overflow: hidden;
  text-overflow: ellipsis;
}

.upcomingMeta span {
  white-space: nowrap;
}

.upcomingStatusGroup {
  display: inline-flex;
  align-items: center;
  justify-content: flex-end;
  gap: 8px;
  min-height: 28px;
  width: 140px;
  justify-self: end;
}

.upcomingStatusChip {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 4px 12px;
  border-radius: 999px;
  font-size: 12px;
  font-weight: 600;
  white-space: nowrap;
  min-height: 28px;
}

.upcomingStatusPending {
  background: rgba(245, 158, 11, 0.16);
  color: #b45309;
